<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app.tint="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="3"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:text="USTH Weather"
            android:textSize="30sp">
        </TextView>


        <ImageButton
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="#3F51B5"
            android:src="@drawable/wt_213"
            app.tint:tint="@color/white"
            tools:ignore="ContentDescription"
            android:contentDescription="Refresh">
        </ImageButton>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:src="@drawable/wt_212"
            android:layout_marginEnd="5dp"
            android:background="#3F51B5"
            app.tint:tint="@color/white"
            tools:ignore="ContentDescription"
            android:contentDescription="Setting">
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Monday"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_248320"
            tools:ignore="ContentDescription">
        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Sunny\n 25 – 31C">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Tuesday"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_5903939"
            tools:ignore="ContentDescription">
        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Partly Sunny\n 25 – 31C">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Wednesday"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_7084486"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Rain\n 20 – 25C">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Thursday"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_4150897"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Sunny\n 25 – 31C">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Friday"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_6635551"
            tools:ignore="ContentDescription">

        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Sunny\n 25 – 31C">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Saturday"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_2188025"
            tools:ignore="ContentDescription">
        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Tornado \n 25 – 31C">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="#200000FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Sunday"
            android:textColor="@color/black">

        </TextView>

        <ImageView
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/wt_1212"
            tools:ignore="ContentDescription">
        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Sunny\n 25 – 31C">

        </TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frag2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#90EE90"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="12C\n Cloudy">
            </TextView>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/wt_7084486">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="right"
                android:text="Paris">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>